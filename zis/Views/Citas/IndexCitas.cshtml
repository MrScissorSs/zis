@using System.Globalization;
@model IEnumerable<zis.Models.Citas>

@{
    ViewData["Title"] = "IndexCitas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card bg-dark text-white shadow m-2 p-2">
    <div class="card-body text-center">
        <h5 class="card-title">Citas</h5>
        <a class="btn btn-outline-light" asp-action="AddCitas"><i class="bi bi-plus-circle mx-2"></i>Agendar Cita</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Nombre Cliente
            </th>
            
            <th>
                Empleado
            </th>
            <th>
                Fecha
            </th>
            <th>
                Hora
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario_Cita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleado_Cita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Cita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hora)
                </td>
            </tr>
        }
  </tbody>
</table>