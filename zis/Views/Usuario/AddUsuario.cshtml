@model zis.Models.CrearUserViewModel
@{
    Layout = null;
    ViewData["Title"] = "AddUsuarioCliente";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/zis.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
}

<div class="card m-3">
    <div class="card-body">
        <h5 class="card-title">Creacion Usuario</h5>
        <p class="card-text">Crea Nuevo Usuario</p>
        <a asp-controller="Usuario" asp-action="IndexUsuario" class="btn btn-primary"><i class="fa-solid fa-arrow-left-long"></i> Volver Atras</a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="AddUsuario" method="post" class="mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rol" class="control-label"></label>
                <select asp-for="Rol" class="form-select">
                    <option selected>Cliente</option>
                    <option selected>Empleado</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Usuario" class="btn btn-primary m-2" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

